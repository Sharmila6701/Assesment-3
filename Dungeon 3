import java.util.Scanner;

public class Q1{

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter dimensions of the dungeon (rows and columns): ");
        String dimensionInput = scanner.nextLine();
        String[] dimensions = dimensionInput.split("\\s+");
        int rows = Integer.parseInt(dimensions[0]);
        int columns = Integer.parseInt(dimensions[1]);

        System.out.print("Enter position of the adventurer: ");
        String adventurerInput = scanner.nextLine();
        String[] adventurerPosition = adventurerInput.split("\\s+");
        int adventurerRow = Integer.parseInt(adventurerPosition[0]);
        int adventurerColumn = Integer.parseInt(adventurerPosition[1]);

        System.out.print("Enter position of the gold: ");
        String goldInput = scanner.nextLine();
        String[] goldPosition = goldInput.split("\\s+");
        int goldRow = Integer.parseInt(goldPosition[0]);
        int goldColumn = Integer.parseInt(goldPosition[1]);

        int steps = Math.abs(adventurerRow - goldRow) + Math.abs(adventurerColumn - goldColumn);

        System.out.println("Minimum number of steps: " + steps);
    }
}
public class Q2 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.print("Enter number of rows: ");
		int rows = scanner.nextInt();
		System.out.print("Enter number of columns: ");
		int columns = scanner.nextInt();

		System.out.print("Enter adventurer's row: ");
		int adventurerRow = scanner.nextInt();
		System.out.print("Enter adventurer's column: ");
		int adventurerColumn = scanner.nextInt();

		System.out.print("Enter gold's row: ");
		int goldRow = scanner.nextInt();
		System.out.print("Enter gold's column: ");
		int goldColumn = scanner.nextInt();

		System.out.print("Enter monster's row: ");
		int monsterRow = scanner.nextInt();
		System.out.print("Enter monster's column: ");
		int monsterColumn = scanner.nextInt();

		int stepsToGold = Math.abs(adventurerRow - goldRow) + Math.abs(adventurerColumn - goldColumn);

		int stepsToMonster = Math.abs(monsterRow - goldRow) + Math.abs(monsterColumn - goldColumn);

		if (stepsToGold <= stepsToMonster) {
			System.out.println("Minimum number of moves: " + stepsToGold);
		} else {
			System.out.println("No possible solution");
		}
	}
}

