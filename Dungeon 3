package practice;

import java.util.Scanner;

public class Q1 {

	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);

	        System.out.print("Enter number of rows: ");
	        int rows = scanner.nextInt();
	        System.out.print("Enter number of columns: ");
	        int columns = scanner.nextInt();

	        System.out.print("Enter adventurer's row: ");
	        int adventurerRow = scanner.nextInt();
	        System.out.print("Enter adventurer's column: ");
	        int adventurerColumn = scanner.nextInt();

	        System.out.print("Enter gold's row: ");
	        int goldRow = scanner.nextInt();
	        System.out.print("Enter gold's column: ");
	        int goldColumn = scanner.nextInt();

	        System.out.print("Enter monster's row: ");
	        int monsterRow = scanner.nextInt();
	        System.out.print("Enter monster's column: ");
	        int monsterColumn = scanner.nextInt();

	        System.out.print("Enter trigger's row: ");
	        int triggerRow = scanner.nextInt();
	        System.out.print("Enter trigger's column: ");
	        int triggerColumn = scanner.nextInt();

	        int stepsToGold = Math.abs(adventurerRow - goldRow) + Math.abs(adventurerColumn - goldColumn);

	        int stepsToTrigger = Math.abs(adventurerRow - triggerRow) + Math.abs(adventurerColumn - triggerColumn);

	        int stepsToMonster = Math.abs(monsterRow - goldRow) + Math.abs(monsterColumn - goldColumn);

	        if (stepsToGold <= stepsToMonster && stepsToGold <= stepsToTrigger) {
	            System.out.println("Minimum number of steps: " + stepsToGold);
	        } else if (stepsToTrigger <= stepsToGold && stepsToTrigger <= stepsToMonster) {
	            System.out.println("Minimum number of steps: " + (stepsToTrigger + Math.abs(triggerRow - goldRow) + Math.abs(triggerColumn - goldColumn)));
	        } else {
	            System.out.println("No possible solution");
	        }
	    }
	}
